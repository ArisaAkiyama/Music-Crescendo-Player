<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Gradient Background: Radial Glow (Apple Music Style) -->
    <RadialGradientBrush x:Key="AppBackgroundBrush" Center="0.5,0" GradientOrigin="0.5,-0.2" RadiusX="1.2" RadiusY="1.2">
        <GradientStop Color="#87CEEB" Offset="0.0"/> <!-- Blue Glow at Top -->
        <GradientStop Color="#1E3A4C" Offset="0.5"/> <!-- Transition Blue-Dark (Reverted) -->
        <GradientStop Color="#050505" Offset="1.0"/> <!-- Black Background (Reverted) -->
    </RadialGradientBrush>

    <!-- Glassmorphism: More transparent dark cards to let the glow show through -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#66121212"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#FFFFFF"/> 
    <SolidColorBrush x:Key="AccentBrush" Color="#87CEEB"/>
    
    <!-- Hover: Subtle white/glass -->
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#20FFFFFF"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#30FFFFFF"/>
    
    <!-- Top Bar: White text again since background is dark/blue glow -->
    <SolidColorBrush x:Key="TopBarBrush" Color="#FFFFFF"/>
</ResourceDictionary>
