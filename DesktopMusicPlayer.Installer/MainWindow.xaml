<Window x:Class="DesktopMusicPlayer.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopMusicPlayer.Installer"
        mc:Ignorable="d"
        Title="Crescendo Installer" Height="500" Width="600"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        BorderBrush="#333333" BorderThickness="1">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#00B2FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33C2FF"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#555555"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#121212" Offset="0.0"/>
                <GradientStop Color="#081824" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Abstract Wave Texture -->
        <Path Data="M0,100 C150,200 300,0 450,100 S600,0 600,100 V400 H0 Z" 
              Fill="#00B2FF" Opacity="0.03" Stretch="Fill" VerticalAlignment="Bottom" Margin="0,100,0,0" Grid.RowSpan="3"/>

        <!-- Header / Drag Area -->
        <Border Grid.Row="0" Background="Transparent" Padding="20" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="Crescendo Setup" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="✕" Width="30" Height="30" HorizontalAlignment="Right" Click="CloseButton_Click" Background="Transparent" Foreground="Gray">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <!-- Logo Image -->
            <Image Source="/Assets/logo.png" Width="80" Height="80" Margin="0,0,0,20" RenderOptions.BitmapScalingMode="HighQuality"/>
            
            <TextBlock Text="Welcome to Crescendo" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="The ultimate desktop music experience." Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,8"/>
            <TextBlock Text="Version 1.0.0 • 85 MB required" Foreground="#666666" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Advanced Options -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock x:Name="OptionsToggle" Text="Installation Options" Foreground="#00B2FF" Cursor="Hand" 
                           HorizontalAlignment="Center" TextDecorations="Underline" MouseLeftButtonDown="OptionsToggle_Click"
                           FontSize="12"/>
                
                <Grid x:Name="OptionsPanel" Visibility="Collapsed" Margin="0,10,0,0" Width="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InstallPathTxt" Height="30" VerticalContentAlignment="Center" Padding="5" 
                             Background="#222" Foreground="White" BorderBrush="#444"/>
                    <Button Grid.Column="1" Content="..." Width="40" Height="30" Margin="5,0,0,0" 
                            Background="#333" Click="BrowseButton_Click"/>
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <TextBlock x:Name="StatusText" Text="Ready to install" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                
                <ProgressBar x:Name="InstallProgressBar" Width="300" Height="6" Background="#333333" Foreground="#00B2FF" BorderThickness="0" Value="0" Margin="0,0,0,20">
                    <ProgressBar.Template>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid x:Name="TemplateRoot">
                                <Border Background="{TemplateBinding Background}" CornerRadius="3"/>
                                <Border x:Name="PART_Track" />
                                <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left" CornerRadius="3"/>
                            </Grid>
                        </ControlTemplate>
                    </ProgressBar.Template>
                </ProgressBar>
            </StackPanel>
        </StackPanel>

        <!-- Footer / Action -->
        <Border Grid.Row="2" Padding="30">
            <Button x:Name="InstallButton" Content="INSTALL NOW" Width="200" Click="InstallButton_Click"/>
        </Border>
    </Grid>
</Window>
